@model List<TipoMascota>

<h1>Listado de Especies</h1>

@if(Model.Count == 0){  //si no hay especies aun mostrar este mensaje
    <p>Aun no hay Especies Registradas</p>
}

<div class="row">
    @foreach (var e in (List<TipoMascota>)ViewBag.Especie)  //para cada especie se dibuja una iteracion
    {
        <div class="col-4">
            <img src="@e.FotoTipo"> // una imagen basica de la especie
            <h2>Especie: @e.Nombre</h2>    //el nombre de la especie
        </div>
    }
</div>

<div>
    <h3>No encontraste la Especie que buscabas?</h3>
    <h4> <a href="~/Categoria/AgregarEspecie"> Agregala aqui</a> </h4>
</div>
